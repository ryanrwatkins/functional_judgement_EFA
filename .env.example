# Environment variables for EFA project
# Copy this file to .env and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional

# Anthropic API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local Llama Configuration
LLAMA_BASE_URL=http://localhost:11434  # Ollama default
LLAMA_MODEL_NAME=llama3                 # Model name in Ollama

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/efa_project.log

# Rate Limiting (requests per minute)
OPENAI_RATE_LIMIT=60
ANTHROPIC_RATE_LIMIT=30
LLAMA_RATE_LIMIT=120

# Processing Limits (for development/testing)
MAX_PERSONAS_LIMIT=1000
MAX_QUESTIONS_LIMIT=1000

# Output Configuration
ENABLE_CSV_EXPORT=true
ENABLE_SUMMARY_REPORTS=true
COMPRESS_JSON_OUTPUT=false